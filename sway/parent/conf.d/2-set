# Logo key. Use Mod1 for Alt.
set $mod Mod4

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Your preferred terminal emulator
set $term alacritty

# Your preferred application launcher
set $menu wofi -i --show=drun --lines=5 --prompt=""

set $explorer dolphin

# Workspaces
set $ws_web  2
set $ws_term 1
set $ws_work 3
set $ws_media 5
set $ws_music 6
set $ws_code 7
set $ws_docs 4

# Desktops
set $dt_lap eDP-1
set $dt_tv HDMI-A-1
